@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Category Add Page</h1>
<br />
@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{
    @Html.Label("Category Name")
    <br />
    @Html.ValidationMessageFor(x=>x.CategoryName,"", new {@class="errormessages"})
    @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control"})
    <br />

    @Html.Label("Category Description")
    <br />
    @Html.ValidationMessageFor(x=>x.CategoryDescription,"", new {@class="errormessages"})
    @Html.TextBoxFor(x=>x.CategoryDescription, new {@class="form-control"})
    <br />

    <button class="btn btn-info">Category Add</button>
}


